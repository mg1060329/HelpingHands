<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helpinghands.partner">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="com.helpinghands.partner.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.TownClap"
        android:usesCleartextTraffic="true">
        <activity android:name="com.helpinghands.partner.activity.AddCreditActivity"></activity>
        <activity android:name="com.helpinghands.partner.activity.ServiceDetailActivity" />
        <activity android:name="com.helpinghands.partner.activity.VerifyPhoneActivity" />
        <activity android:name="com.helpinghands.partner.activity.CategoryActivity" />
        <activity android:name="com.helpinghands.partner.activity.ForgotActivity" />
        <activity android:name="com.helpinghands.partner.activity.ChanegPasswordActivity" />
        <activity
            android:name="com.helpinghands.partner.activity.FirstActivity"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.helpinghands.partner.activity.HomeActivity" />
        <activity
            android:name="com.helpinghands.partner.activity.LoginActivity"
            android:theme="@style/Theme.Intro" />
        <activity android:name="com.helpinghands.partner.activity.MapActivity" />
        <activity android:name="com.helpinghands.partner.activity.RazerpayActivity" />
        <activity android:name="com.helpinghands.partner.activity.PaypalActivity" />
        <activity android:name="com.helpinghands.partner.activity.StripPaymentActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_key" />
    </application>

</manifest>